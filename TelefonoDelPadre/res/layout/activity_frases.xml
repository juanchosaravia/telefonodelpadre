<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Frases_Activity" >

    <Button
        android:id="@+id/iniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cancelar"
        android:layout_alignLeft="@+id/cancelar"
        android:layout_marginBottom="15dp"
        android:text="Iniciar" />

    <Button
        android:id="@+id/cancelar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mensaje"
        android:layout_alignParentBottom="true"
        android:text="Cancelar" />

    <TextView
        android:id="@+id/bienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/msj_inicio"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#47B7ED"
        android:textSize="28dip" />

    <TextView
        android:id="@+id/mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bienvenida"
        android:layout_below="@+id/bienvenida"
        android:layout_marginTop="18dp"
        android:text="@string/welcome"
        android:textSize="18dip" />

</RelativeLayout>